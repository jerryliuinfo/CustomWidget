           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_marginTop="20dp"
           android:background="@color/colorPrimary"
           />
       <com.apache.customwidget.paint.PaintDemo
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:layout_marginTop="20dp"
